#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int a=1;
    int b=n-1;
    for(int i=1;i<=n;i++) {
        for(int j=1;j<=b;j++) {
            cout<<" ";
        }
        b--;
        for(int j=1;j<=a;j++){
            cout<<"*";
        }
        cout<<endl;
        a+=2;
    }
    a=(n-1)*2-1;
    for(int i=1;i<=n-1;i++) {
        for(int j=1;j<=i;j++) {
            cout<<" ";
        }
        for(int j=1;j<=a;j++) {
            cout<<"*";
        }
        a-=2;
        cout<<endl;
    }
}
